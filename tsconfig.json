{
  "compilerOptions": {
    "module": "ES2020",
    // "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": false,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**/*", "src/**/*.test.*"]
}
